<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F8">

    <!-- 1. SEU CABEÇALHO (Mantive igual, só ajustei as constraints) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:background="@drawable/shape_radius"
        android:clipToOutline="true"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- (Seu código da imagem de fundo e título aqui...) -->
        <!-- Vou resumir para não ficar gigante, use o seu código atual aqui -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/back_wall3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minha Playlist"
                android:textColor="#FFF"
                android:textSize="23sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_marginStart="40dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_search_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. A LISTA DE MÚSICAS -->
    <!-- Note: layout_height="0dp" significa "ocupe o espaço disponível" -->
    <!-- Ela começa abaixo do Header e termina acima do MiniPlayer -->
    <ListView
        android:id="@+id/listaPlaylists"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:padding="10dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toTopOf="@id/miniPlayerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 3. O MINI PLAYER (Barra Inferior) -->
    <!-- Fica grudado no fundo (bottom to bottom parent) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/miniPlayerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingHorizontal="16dp">

            <!-- Capa da Música tocando -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMiniCapa"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgPlayerCapa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back_wall3"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Título e Artista -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@id/cardMiniCapa"
                app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/txtPlayerTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escolha uma música"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/txtPlayerArtista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:maxLines="1"/>
            </LinearLayout>

            <!-- Botão Play/Pause -->
            <ImageView
                android:id="@+id/btnPlayPause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_play_arrow_24"
                app:tint="#1A1A1A"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@id/btnNext"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <!-- Dica: Use um drawable de 'pause' ou 'play' aqui -->

            <!-- Botão Next -->
            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_skip_next_24"
                app:tint="#1A1A1A"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Barra de progresso fininha (Opcional, estilo Spotify) -->
        <ProgressBar
            android:id="@+id/progressBarPlayer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:progress="30"
            android:layout_gravity="bottom"
            android:progressTint="#FF5722"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>